<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <UserSecretsId>a0f56b58-73e8-4d9e-b786-f81f35f55760</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <DockerfileContext>..\..</DockerfileContext>
    <LangVersion>9.0</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <WarningsAsErrors>;NU1605</WarningsAsErrors>
    <NoWarn>;CS1591;CS1998</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Benchmark.Server.Https.service">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="appsettings.Development.json" />
    <EmbeddedResource Include="appsettings.json" />
  </ItemGroup>

  <ItemGroup>
    <None Update="server.local.crt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="server.local.key">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\Benchmark.Server\*.cs" Link="%(FileName)%(Extension)" />
    <Compile Include="..\Benchmark.Server\Hubs\**\*.cs" Link="Hubs\%(RecursiveDir)\%(FileName)%(Extension)" />
    <Compile Include="..\Benchmark.Server\Services\**\*.cs" Link="Services\%(RecursiveDir)\%(FileName)%(Extension)" />
    <Compile Include="..\Benchmark.Server\Shared\**\*.cs" Link="Shared\%(RecursiveDir)\%(FileName)%(Extension)" />
    <Protobuf Include="..\Benchmark.Server\Protos\**\*.proto" Link="Protos\%(RecursiveDir)\%(FileName)%(Extension)" GrpcServices="Server" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Grpc.AspNetCore" Version="2.35.0" />
    <PackageReference Include="MagicOnion.Server" Version="4.1.2" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="5.0.0" />
    <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.10.9" />
    <PackageReference Include="ZLogger" Version="1.4.1" />
  </ItemGroup>

</Project>
