[*.cs]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.csproj]
charset = utf-8
indent_style = space
indent_size = 2

[*.md]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[Dockerfile]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true

[*.{sh,yaml,yml,rules,json,rb}]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
